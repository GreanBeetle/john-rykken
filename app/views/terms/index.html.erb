<!-- level class VERTICALLY levels its elements -->
<nav class="level">
  <div class="level-item">
    <small><%= link_to "SIGN UP", new_user_registration_path %></small>
  </div>
  <div class="level-item">
    <small><%= link_to "SIGN IN", new_user_session_path, :method => :get %></small>
  </div>
  <div class="level-item">
    <small><%= link_to "SIGN OUT", destroy_user_session_path, :method => :delete %></small>
  </div>
  <div class="level-item">
    <small>USERNAME</small>
  </div>
  <% if current_user %>
    <div class="level-item">
      <small><%= current_user.username %></small>
    </div>
  <% end %>
</nav>
