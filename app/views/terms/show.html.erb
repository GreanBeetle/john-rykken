<%= render "/crux_navbar" %>
<div class="container" id="term-detail-container">
  <div class="title">
    <img src="/assets/under-512" id="under-512">
    <h1><%= @term.name %></h1>
    <hr>
    <h3 id="body"><%= @term.explanation %></h3>
  </div>

  <hr>

  <%= link_to "leave a comment", new_term_comment_path(@term), id: "new_comment_link", remote: true %>

  <div id="comment_section">
    <% @comments.each do |comment| %>
    <%= comment.body %>
    <hr>
    <% end %>
  </div>

</div>
