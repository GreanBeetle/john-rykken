<!DOCTYPE html>
<html>
  <head>
    <title>JohnRykken</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">

      <!-- nav brand is the logo, it's always on the left  -->
      <div class="navbar-brand">
        <p id="johnrykken">john rykken</p>
      </div>

      <!-- nav-menu fills all nav space after nav-brand -->
      <div class="navbar-menu">

        <!-- nav-start places elements on the left -->
        <div class="navbar-start">
          <div class="navbar-item">
            <h1><%= link_to "HOME", root_path %></h1>
          </div>
          <div class="navbar-item">
            <h1>ABOUT</h1>
          </div>
        </div>

        <!-- nav-end places elements on the right -->
        <div class="navbar-end">
          <!-- nav drop menu -->
          <div class="navbar-item">
            <div class="dropdown is-active">
              <!-- button -->
              <div class="dropdown-trigger">
                <button class="button" id="hamburger"><img src="/assets/hamburger.png"></button>
              </div>
              <!-- menu items -->
              <div class="dropdown-menu" id="dropdown-menu" role="menu">
                <div class="dropdown-content">
                  <p class="dropdown-item">ABC</p>
                  <p class="dropdown-item">ABC</p>
                  <p class="dropdown-item">ABC</p>
                </div>
              </div>
            </div>

          </div>
          <!-- end -->
          <div class="navbar-item">
            <h1><%= link_to '"PLAIN ENGLISH"', terms_path %></h1>
          </div>
          <div class="navbar-item">
            <h1>CODE</h1>
          </div>
          <div class="navbar-item">
            <h1>PORTFOLIO</h1>
          </div>
        </div>

      </div>
    </nav>

    <%= yield %>

    <% if current_user %>
      <footer>
        <small><%= current_user.username %></small> |
        <small><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></small>
      </footer>
    <% end %>

  </body>
</html>
